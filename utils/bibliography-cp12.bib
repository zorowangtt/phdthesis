	pmid = {33141567},
	note = {Publisher: American Chemical Society},
	pages = {19631--19641},
}

@article{stanley2013,
	title = {Comparative analysis of 126 cyanobacterial genomes reveals evidence of functional diversity among homologs of the redox-regulated {CP12} protein},
