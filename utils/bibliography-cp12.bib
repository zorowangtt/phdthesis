	keywords = {Disorder-to-order transitions, EPR spectroscopy, Human pancreatic lipase, Induced folding, Intrinsic disorder, Lid opening, Measles virus, Nucleoprotein, Phosphoprotein, Protein structural transitions, Site-directed spin labeling},
	pages = {315--328},
}

@article{husic2018,
